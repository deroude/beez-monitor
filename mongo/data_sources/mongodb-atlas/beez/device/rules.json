{
    "collection": "device",
    "database": "beez",
    "roles": [
        {
            "name": "readOwnWriteOwn",
            "apply_when": {},
            "document_filters": {
                "write": {
                    "%or": [
                        {
                            "user_id": "%%user.id"
                        },
                        {
                            "user_id": {
                                "$exists": false
                            }
                        }
                    ]
                },
                "read": {
                    "user_id": "%%user.id"
                }
            },
            "read": true,
            "write": true,
            "insert": true,
            "delete": false,
            "search": true
        }
    ]
}